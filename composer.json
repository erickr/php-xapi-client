{
    "name": "php-xapi/client",
    "type": "library",
    "description": "client library for the Experience API (xAPI)",
    "keywords": ["xAPI", "Experience API", "Tin Can API", "client"],
    "homepage": "https://github.com/php-xapi/client",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Flothmann",
            "homepage": "https://github.com/xabbuh"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "php-http/client-common": "^1.0 || ^2.0",
        "php-http/client-implementation": "^1.0",
        "php-http/httplug": "^1.0 || ^2.0",
        "php-http/message": "^1.0",
        "php-http/message-factory": "^1.0",
        "php-xapi/exception": "^1.0",
        "php-xapi/model": "^4.0",
        "php-xapi/serializer": "^4.0",
        "php-xapi/symfony-serializer": "^3.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^6.0 || ^7.0",
        "php-http/mock-client": "^1.2",
        "php-xapi/test-fixtures": "^2.0",
        "symfony/phpunit-bridge": "^5.2"
    },
    "minimum-stability": "dev",
    "suggest": {
        "php-http/discovery": "For automatic discovery of HTTP clients and request factories",
        "xabbuh/oauth1-authentication": "For OAuth1 authentication support"
    },
    "conflict": {
        "xabbuh/xapi-client": "*"
    },
    "autoload": {
        "psr-4": {
            "Xabbuh\\XApi\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Xabbuh\\XApi\\Client\\": "spec/",
            "Xabbuh\\XApi\\Client\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.7.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/erickr/php-xapi-exception.git"
        },
        {
            "type": "git",
            "url": "https://github.com/erickr/php-xapi-model.git"
        },
        {
            "type": "git",
            "url": "https://github.com/erickr/php-xapi-json-test-fixtures.git"
        },        {
            "type": "git",
            "url": "https://github.com/erickr/php-xapi-test-fixtures.git"
        },
        {
            "type": "git",
            "url": "https://github.com/erickr/php-xapi-serializer.git"
        },
        {
            "type": "git",
            "url": "https://github.com/erickr/php-xapi-symfony-serializer.git"
        }
    ]
}
